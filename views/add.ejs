<body>
    <div class="row">
        <div class="col-6 offset-3">
            <form action="/home" method="POST">
                <h1>New Campground</h1>
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control"  type="text" name="campground[title]" id="title" >
                </div>
                    <label  class="form-label" for="image">Image</label>
                     <input class="form-control"   type="text" name="campground[image]" id="image" >
                </div>
                
                <div>
                    <label  class="form-label" for="description">Description</label>
                     <textarea class="form-control"   type="text" name="campground[description]" id="description"></textarea>
                </div>
                <button class="mt-4 btn btn-success">Add DIV</button>
            </form>
    
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

